{
  "name": "@cubicler/cubicagentkit",
  "version": "2.6.1",
  "description": "Node.js library for creating AI agents that integrate with Cubicler",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "ts-node --esm src/index.ts",
    "dev:watch": "ts-node --esm --watch src/index.ts",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test:integration": "vitest --config tests/integration/vitest.integration.config.ts",
    "test:integration:run": "vitest --run --config tests/integration/vitest.integration.config.ts",
    "test:all": "npm run test:run && npm run test:integration:run",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "check": "npm run lint && npm run test:run && npm run build",
    "check:all": "npm run lint && npm run test:all && npm run build",
    "prepublishOnly": "npm run check",
    "publish:dry": "npm publish --dry-run"
  },
  "keywords": [
    "ai",
    "agent",
    "cubicler",
    "mcp",
    "nodejs",
    "typescript"
  ],
  "author": "Cubicler",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cubicler/CubicAgentKit.git"
  },
  "bugs": {
    "url": "https://github.com/Cubicler/CubicAgentKit/issues"
  },
  "homepage": "https://github.com/Cubicler/CubicAgentKit#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "eventsource": "^4.0.0",
    "express": "^5.1.0",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^5.0.3",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
